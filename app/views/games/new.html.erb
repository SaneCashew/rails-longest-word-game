<h1>New Game</h1>
<div class="container">
  <% @letters.each do |letter| %>
    <h3 class="btn-medium"><%= letter.capitalize %></h3>
  <% end %>
</div>
<br>
<p>Make the longest word that you can!</p>
<form action="score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input type="submit" value="Score me!">
</form>
